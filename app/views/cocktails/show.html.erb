<h1> <%= @cocktail.name %> </h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

  <%= simple_form_for ([@cocktail, @dose]) do |f|%>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :ingredient, collection: @ingredients  %>
  </div>

  <div class="form-inputs">
    <%= f.button :submit  %>
  </div>

  <% end %>
